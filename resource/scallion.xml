<plugin id="scallion" path="libshadow-plugin-scallion.so" />
<plugin id="filetransfer" path="libshadow-plugin-filetransfer.so" />

<cluster id="net0" bandwidthdown="1024" bandwidthup="768" />
<link id="link0" clusters="net0 net0" latency="60" jitter="20" packetloss="0.0" />

<software id="fileserver" plugin="filetransfer" time="1" arguments="server 80 ~/.shadow/share/" />
<node id="server.file" software="fileserver" cluster="net0" bandwidthup="102400" bandwidthdown="102400" cpufrequency="2800000" quantity="1" />

<software id="authority" plugin="scallion" time="1" arguments="dirauth 102400 1024000 1024000 ./authority.torrc ./data/authoritydata ~/.shadow/share/geoip" />
<node id="4uthority" software="authority" cluster="net0" bandwidthup="102400" bandwidthdown="102400" cpufrequency="2800000" quantity="1" />

<software id="exit" plugin="scallion" time="300" arguments="exitrelay 1024 102400 102400 ./exit.torrc ./data/exitdata ~/.shadow/share/geoip" />
<node id="exit.tor" software="exit" cpufrequency="2800000" quantity="1" />

<software id="relay" plugin="scallion" time="300" arguments="relay 1024 102400 102400 ./relay.torrc ./data/relaydata ~/.shadow/share/geoip" />
<node id="relay.tor" software="relay" cpufrequency="2800000" quantity="2" />

<software id="client" plugin="scallion" time="3000" arguments="client 1024 102400 102400 ./client.torrc ./data/clientdata ~/.shadow/share/geoip client single server.file 80 localhost 9000 10 /1MiB.urnd" />
<node id="client.tor" software="client" cpufrequency="2800000" quantity="1" />

<kill time="5400" />
